<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="btn_pink_background" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/padding_btn</item>
        <item name="android:layout_marginTop">@dimen/margin_top_welcome_screen_btn</item>
        <item name="android:background">@drawable/btn_selector_pink</item>
        <item name="android:textColor">@color/idare_white</item>
    </style>

    <style name="btn_white_background" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/padding_btn</item>
        <item name="android:layout_marginTop">@dimen/margin_top_welcome_screen_btn</item>
        <item name="android:background">@drawable/btn_selector_white</item>
        <item name="android:textColor">@color/idare_white</item>
    </style>

    <style name="btn_make_passive" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_selector_white</item>
        <item name="android:paddingLeft">@dimen/padding_btn</item>
        <item name="android:paddingRight">@dimen/padding_btn</item>
        <item name="android:textColor">@color/idare_pink</item>
        <item name="android:text">@string/make_passive</item>
    </style>

    <style name="Theme.AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Button Color -->
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorPrimary</item>
        <!-- Title Color -->
        <item name="android:textColor">@color/idare_white</item>
        <!-- Message Color -->
        <item name="android:textColorPrimary">@color/idare_white</item>
    </style>



    <style name="NavigationMenuStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/idare_white</item>
        <item name="colorControlHighlight">@color/light_grey</item>
    </style>


</resources>
