<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="headerViewModel"
            type="com.opensource.app.idare.viewmodel.NavigationMenuHeaderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:theme="@style/NavigationMenuStyle">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/nav_header_text_margin_bottom"
            android:layout_marginLeft="@dimen/nav_header_text_margin_left"
            android:layout_marginTop="@dimen/nav_header_textmargin_top"
            android:textSize="@dimen/nav_header_text_size" />
    </LinearLayout>
</layout>

