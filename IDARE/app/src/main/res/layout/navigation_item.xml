<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.opensource.app.idare.viewmodel.NavMenuItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/nav_item_padding">

        <ImageView
            android:id="@+id/menu_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@{viewModel.menuItemIcon}" />

        <TextView
            android:id="@+id/menu_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/nav_item_padding_left"
            android:text="@{viewModel.expandableMenu.menuItemName}"
            android:textSize="@dimen/nav_item_text_size"
            android:textStyle="bold" />

    </LinearLayout>
</layout>